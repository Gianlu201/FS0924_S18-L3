@model StudentsListViewModel

@if(Model.Students != null && Model.Students.Count >0)
{
    <table id="studentsTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Birthday</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var student in Model.Students)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Surname</td>
                    <td>@student.BirthdayDate.ToString("dd-MM-yyyy")</td>
                    <td>@student.Email</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="showEditModal('@student.Id')">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="showDeleteModal('@student.Id')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}